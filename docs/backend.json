{
  "entities": {
    "Professor": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Professor",
      "type": "object",
      "description": "Represents a professor within the UNDB system.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "name": { "type": "string" },
        "registrationDate": { "type": "string", "format": "date-time" },
        "birthday": { "type": "string", "format": "date" },
        "course": { "type": "string" },
        "role": { "type": "string", "enum": ["professor", "coordenador"] }
      },
      "required": ["id", "email", "name", "registrationDate", "course", "role"]
    },
    "Course": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Course",
      "type": "object",
      "description": "Represents a course offered at UNDB.",
      "properties": {
        "id": { "type": "string" },
        "professorId": { "type": "string" },
        "name": { "type": "string" },
        "code": { "type": "string" },
        "syllabus": { "type": "string" },
        "objectives": { "type": "string" },
        "competencies": { "type": "string" },
        "thematicTree": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" }
            },
            "required": ["name", "description"]
          }
        },
        "bibliography": {
          "type": "object",
          "properties": {
              "basic": { "type": "string" },
              "complementary": { "type": "string" },
              "recommended": { "type": "string" }
          }
        }
      },
      "required": ["id", "professorId", "name", "code", "syllabus", "objectives"]
    },
    "Classroom": {
      "title": "Classroom",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "courseId": { "type": "string" },
        "name": { "type": "string" },
        "semester": { "type": "string" },
        "workload": { "type": "string" },
        "classType": { "type": "string" },
        "gradingRule": { "type": "string" }
      },
      "required": ["id", "courseId", "name", "semester"]
    },
    "Student": {
      "title": "Student",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" }
      },
      "required": ["id", "name", "email"]
    },
    "ClassroomStudent": {
      "title": "ClassroomStudent",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "classroomId": { "type": "string" },
        "studentId": { "type": "string" },
        "groupId": { "type": ["string", "null"] },
        "grades": { "type": "array" }
      },
      "required": ["id", "classroomId", "studentId"]
    },
    "Document": {
      "title": "Document",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "professorId": { "type": "string" },
        "authorName": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "course": { "type": "string" },
        "discipline": { "type": "string" },
        "documentType": { "type": "string" },
        "uploadType": { "type": "string", "enum": ["link"] },
        "fileUrl": { "type": "string", "format": "uri" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["password", "anonymous", "google.com"]
  },
  "firestore": {
    "structure": [
      { "path": "/professors/{professorId}", "definition": { "entityName": "Professor" } },
      { "path": "/professors/{professorId}/documents/{docId}", "definition": { "entityName": "Document" } },
      { "path": "/professors/{professorId}/courses/{courseId}", "definition": { "entityName": "Course" } },
      { "path": "/professors/{professorId}/courses/{courseId}/classrooms/{classroomId}", "definition": { "entityName": "Classroom" } },
      { "path": "/professors/{professorId}/courses/{courseId}/classrooms/{classroomId}/classroomStudents/{csId}", "definition": { "entityName": "ClassroomStudent" } }
    ]
  }
}
